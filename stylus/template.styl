@import 'perfilAnimal'
@import 'filtrar'
@import 'index'
@import 'pesquisaAnimal'
@import 'login'

@font-face
	font-family: 'Roboto'
	src url("../fonts/Roboto-Regular.ttf")
	
*
	margin 0
	padding 0
	box-sizing border-box
	font-size 4.27vw
	
	font-family "Roboto", 'sans-serif'
	
header
	width 100%
	height 15vw
	background-color #FF6F00
	padding 0 5vw 0 5vw
	position absolute
	top 0
	box-shadow 2px 2px 5px #888888
	display grid
	grid-template-columns 60% 40%
	align-items center
	z-index 1
	h1
		color #fff 
		font-size 2rem
	a
		color #fff
		text-decoration none
		

.principal
	width 100vw
	height 100vh	
	text-align center
	z-index 0
	background-image url("../img/fundoMain.jpeg")
	background-attachment fixed
	background-size auto 100%
	background-position-x: -150px
	
	.container
		width 100vw
		height 100vh
		background-color rgba(5,5,5,0.7)
		padding-top 50vw
		h2
			font-size 4rem
			color #ffF
			margin-bottom 5vw
		h3
			color #fff
			margin-bottom 5vw
		button
			width 70vw
			height 20vw
			color #FF6F00
			background: white
			font-size 1.5rem
			border-radius 10px
			margin-top 5vw
			margin-bottom 5vw
			border none
			border-radius 50px
			box-shadow 1px 1px 2px gray
			font-weight bold
		p
			color #fff
		a
			text-decoration none
			color #FF6F00
			
		

footer
	width 100%
	height 15vw
	background-color rgba(255,255,255,0.4)
	display grid
	align-items center 
	justify-items center
	z-index 1
	color #fff
	.indexfooter
		position absolute
		bottom 0
