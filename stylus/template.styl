@import 'perfilAnimal'
@import 'index'
@import 'pesquisaAnimal'

*
	margin 0
	padding 0
	box-sizing border-box
	font-size 4.27vw
	font-family Arial

header
	width 100%
	height 15vw
	background-color #FF6F00
	padding 0 5vw 0 5vw
	position absolute
	top 0
	box-shadow 2px 2px 5px #888888
	display grid
	grid-template-columns 60% 40%
	align-items center
	z-index 1
	h1
		color #fff 
		font-size 2rem
	a
		color #fff
		text-decoration none
		

.principal
	width 100vw
	height 100vh	
	text-align center
	background  #acbabc
	z-index 0
	.container
		width 100vw
		padding-top 50vw
		h2
			font-size 4rem
			color #ffF
			margin-bottom 5vw
		h3
			color #fff
			margin-bottom 5vw
		button
			width 70vw
			height 20vw
			color #FF6F00
			font-size 1.5rem
			border-radius 10px
			margin-top 5vw
			margin-bottom 5vw
			border none
			box-shadow 1px 1px 2px gray
		p
			color #fff
		a
			text-decoration none
			color #FF6F00
		

footer
	width 100%
	height 15vw
	background-color rgba(255,255,255,0.4)
	display grid
	align-items center 
	justify-items center
	z-index 1
	color #fff
	.indexfooter
		position absolute
		bottom 0
