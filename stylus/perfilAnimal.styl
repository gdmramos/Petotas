*
    box-sizing border-box
    font-family 'Roboto', 'sans-serif'
    color gray

.cadastroAnimalContainer
    display: grid
    font-size: 20px
    grid-template-columns: 100%
    grid-template-rows: auto
    padding: 20px

.cadastroAnimalFoto
    grid-column 1
    grid-row 1
    width 100%
    border: 1px solid gray
    border-radius: 5px

.cadastroAnimalInformacoes
    display grid
    font-size 20px
    grid-template-columns 50% 50%
    grid-template-rows auto auto
    padding 20px  
    .grid-1
        grid-column 1
        grid-row 1
        float left
        text-align left
        p
            font-size 17px

        b
            color #424242
            font-size 15px    
    .grid-2
        grid-column 2
        grid-row 1
        text-align right
        float right
        p
            font-size 17px

        b
            color #424242
            font-size 15px

    .grid-3
        grid-column-end span 2
        b
            text-align center
            color #424242
            font-size 15px
        p
            font-size: 17px
            text-align justify
            margin-top 5px
            
        

    