.header-filtro
	grid-template-columns 45% 55%
	a
		img
			float left
		p
			margin-left 1rem
	h2
		color #fff
		
.container-filtro
	padding 15vw 10vw
	width 100%
	height 100vh
	background-color #bcbcbc
	display grid
	justify-items center
	align-items center
	grid-template-columns 1fr 1fr
	color #FF6F00
	h2
		grid-column-end span 2
		color #000
	input
		grid-column-end span 2
	button
		grid-column-end span 2
		width 40vw
		height 10vw
		color #FF6F00
		border-radius 5vw 
		border none
		box-shadow 1px 1px 1px #888888
	div
		background-color #fff
		width 30vw
		height 30vw
		border-radius 50%
		position relative
		box-shadow 1px 1px 1px #888888
		